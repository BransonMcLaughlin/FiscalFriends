@page
@model FiscalFriendsWeb.Pages.Account.ProfileModel
@{
    
    Layout = HttpContext.User.Identity.IsAuthenticated ? "_LayoutAuthentication" : "_Layout";
}

<link rel="stylesheet" href="~/css/ProfileStyleSheet.css" />

<div class="profileContainer">
    <div class"profileHeader">  
    <h1>Hello, <span>@Model.UserProfile.FirstName!</span></h1>
    <div class="profileContent">
        <div class="profilePicture"></div>
        <div class="profileInfo">
    
        <label>First Name:      @Model.UserProfile.FirstName</label>
        <label>Last Name:       @Model.UserProfile.LastName</label>
        <label>Username:        @Model.UserProfile.UserName</label>
        <label>Email:       @Model.UserProfile.Email</label>
        </div>
            <a asp-page="EditProfile" asp-route-id="@Model.UserProfile.PersonID" class="btn btn-primary">Edit</a>
    </div>
    </div>
</div>
