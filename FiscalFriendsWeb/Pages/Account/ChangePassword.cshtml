@page
@model FiscalFriendsWeb.Pages.Account.ChangePasswordModel
@{
    Layout = HttpContext.User.Identity.IsAuthenticated ? "_LayoutAuthentication" : "_Layout";
}

<link rel="stylesheet" href="~/css/RegisterStyleSheet.css" />

<div class="ChangePasswordContainer">
    <form method="post" class="ChangePasswordBox">

        <div class="frmGroup">
            <!-- Dummy Values to make model valid -->
            <input asp-for="Person.FirstName" type="text" class="form-control" placeholder="first name" hidden/>
            <input asp-for="Person.LastName" type="text" class="form-control" placeholder="last name" hidden />
            <input asp-for="Person.Email" type="text" class="form-control" placeholder="email" hidden />
            <input asp-for="Person.PhoneNumber" type="text" class="form-control" placeholder="phonenumber" hidden />
            <input asp-for="Person.UserName" type="text" class="form-control" placeholder="username" hidden />
            <input asp-for="Person.Birthday" type="date" class="form-control" placeholder="date of birth" hidden />

            <!-- PassowrdHash Label-->
            <label asp-for="Person.Password" class="form-label"></label>
            <input asp-for="Person.Password" type="password" class="form-control" placeholder="new password" />
            <span asp-validation-for="Person.Password" class="text-danger"></span>


            <br />
            <br />
            <!-- Register Button-->
            <div class="frmGroup">
                <button id="btnChangePassword" class="btn btn-primary" onclick="return confirm('Are you sure you want to Change your password?');">Update Password</button>
    </form>
</div>