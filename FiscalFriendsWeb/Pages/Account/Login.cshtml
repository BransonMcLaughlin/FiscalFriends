@page
@model FiscalFriendsWeb.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Log In";
}
<link rel="stylesheet" href ="~/css/LoginStyleSheet.css" />

<div class="signInContainer">
    <form method="post" class="signInBox">
    <h2> Welcome. </h2>
    <p> Please sign in to access your account.</p>
    <div class="row text-danger" asp-validation-summary="All"></div>

    <!-- Sign-In Box -->

    <!-- Email Label -->
    <div class="frmGroup">
    <label asp-for="loginUser.Email" class="form-label">Email:</label>
            <input asp-for="loginUser.Email" type="text" class="form-control" placeholder="email" />
            <span asp-validation-for="loginUser.Email" class="text-danger"></span>

    <!-- Password Label -->
    <label asp-for="loginUser.Password" class="form-label">Password:</label>
    <input asp-for="loginUser.Password" type="password" class="form-control" placeholder="password"/>
    <span asp-validation-for="loginUser.Password" class="text-danger"></span>

    <!-- RememberMe CheckBox
    <div class="checkBoxContainer">
    <input type="checkbox" id="rememberMe" name="rememberMe" />
    <label asp-for="loginUser.rememberMe">Remember Me</label>
    <br>
    <br>
    </div>
    -->
    <br />
    <br />
    <!-- Sign-In Button-->
    <div class"frmGroup">
                <button id="btnLogin" class="btn btn-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-box-arrow-in-right" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M6 3.5a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-2a.5.5 0 0 0-1 0v2A1.5 1.5 0 0 0 6.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-8A1.5 1.5 0 0 0 5 3.5v2a.5.5 0 0 0 1 0z" />
                        <path fill-rule="evenodd" d="M11.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H1.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708z" />
                    </svg><i class="bi bi-box-arrow-in-right"></i> Sign In
                </button>
    <br>
    <br>

    <!-- Forgot User/Pass-->
    Forgot <a href="/forgotLink">Username or Password?</a>
    <br />
        Not a User? <a href="/Account/Register">Sign up here.</a>
        </div>
    </form>
</div>
    