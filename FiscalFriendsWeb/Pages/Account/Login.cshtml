@page
@model FiscalFriendsWeb.Pages.Account.Login
@{
    ViewData["Title"] = "Log In";
}
<form method="post">
    <div class="row text-danger" asp-validation-summary="All"></div>
    <!-- First Name Label-->
    <div class="row m-2">
        <div class="col-2">

            <label asp-for="loginUser.Email" class="form-label"></label>
        </div>
        <div class="col-10">
            <span asp-validation-for="loginUser.Email" class="text-danger"></span>
            <input asp-for="loginUser.Email" type="text" class="form-control" />   
        </div>
    </div>
    </form>