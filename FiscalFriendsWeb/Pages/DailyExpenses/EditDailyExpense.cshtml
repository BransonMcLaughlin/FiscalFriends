@page
@model FiscalFriendsWeb.Pages.DailyExpenses.EditDailyExpenseModel
@{
    Layout = HttpContext.User.Identity.IsAuthenticated ? "_LayoutAuthentication" : "_Layout";
}
<form method="post" class="form-group">


    <div class="row m-2">
        <div class="col-2">
            <label asp-for="Expense.amount"></label>
        </div>
        <div class="col-10">
            <input type="text" class="form-control" asp-for="Expense.amount" placeholder="0" />
        </div>
        <span asp-validation-for="Expense.amount" class="text-danger"></span>
    </div>

    <div class="row m-2">
        <div class="col-2">
            <label asp-for="Expense.description"></label>
        </div>
        <div class="col-10">
            <textarea class="form-control" asp-for="Expense.description"> </textarea>
        </div>
    </div>

    <div class="row m-2">
        <div class="col-2">
            <label asp-for="Expense.paymentMethod"></label>
        </div>
        <div class="col-10">
            <input type="text" class="form-control" asp-for="Expense.paymentMethod" />
        </div>
        <span asp-validation-for="Expense.paymentMethod" class="text-danger"></span>
    </div>

    <div class="row m-2">
        <div class="col-2">
            <label asp-for="Expense.vendor"></label>
        </div>
        <div class="col-10">
            <input type="text" class="form-control" asp-for="Expense.vendor" />
        </div>
        <span asp-validation-for="Expense.vendor" class="text-danger"></span>
    </div>

    <div class="row m-2">
        <div class="col-2">
            <label asp-for="Expense.date"></label>
        </div>
        <div class="col-10">
            <input type="date" class="form-control" placeholder="" asp-for="Expense.date" />
        </div>
    </div>

    <!--  This is to make the drop down table for daily expenses-->
    <div class="row m-2">
        <div class="col-2">
            <label asp-for="Expense.Category"></label>
        </div>
        <div class="col-10">
            <select asp-for="Expense.Category" asp-items="@Model.Categories"></select>
        </div>
    </div>

    <div class="row m-2">
        <div class="col-2">
            <input type="submit" vlaue="Update" class="btn btn-primary" />
        </div>
    </div>
</form>
