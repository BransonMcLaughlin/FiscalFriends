@page
@model FiscalFriendsWeb.Pages.DailyExpenses.AddDailyExpenseModel
@{
}
<form method="post" class="form-group">
    <div class="row m-2">
        <div class="col-2">
            <label asp-for="newDailyExpense.paymentMethod" />
        </div>
        <div class="col-10">
            <input type="text" class="form-control" asp-for="newDailyExpense.paymentMethod"/>
        </div>
    </div>

    <!--  This is to make the drop down table for daily expenses-->
    <div class="row m-2">
        <div class="col-2">
            <label asp-for="newDailyExpense.Category" />
        </div>
        <div class="col-10">
            <select asp-for="newDailyExpense.Category" asp-items="@Model.Categories" />
        </div>
    </div>

    <div class="row m-2">
        <div class="col-2">
            <button id="btnAdd" class="btn btn-primary">Add Daily Expense</button>
        </div>
    </div>
</form>