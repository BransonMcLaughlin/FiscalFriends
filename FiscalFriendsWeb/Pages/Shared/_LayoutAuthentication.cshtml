<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FiscalFriendsWeb</title>
     
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/FiscalFriendsWeb.styles.css" asp-append-version="true" /> <!-- Site Info -->
    <link rel="stylesheet" href="~/js/site.js" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">


</head>
<body onload="checkBtn()">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container flex-container">
                <div class="header-logo-top">
                    <!-- FiscalFriends Logo -->
                    <a class="navbar-brand" asp-area="" asp-page="/Index">
                        <img src="~/css/FiscalFriendsLogo.jpg" alt="FiscalFriends Logo" height="120">
                    </a>
                    <!-- FiscalFriends Slogan -->
                    <div class="blue-box">
                        <h1 class="slogan"> FiscalFriends</h1>
                        <h3 class="slogan"> Where Friendship Meets Finance</h3>
                        <!-- Top right interactions --> 
                        <div class="top-right-interactions">
                            <!--
                            <a href="/Customer Support">Customer Service</a>
                            <a href="AboutUs">About Us</a>
                        -->
                            <a href="/Privacy">Privacy</a>
                        </div>
                    </div>
                </div>
                <!-- Navigation Links -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Webpage headers -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- 
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Subscriptions</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Goals</a>
                        </li>
                        -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Account/ChangePassword">Change Password</a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/DailyExpenses/ViewDailyExpenses">View Daily Expense</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/DailyExpenses/AddDailyExpense">Add Daily Expense</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Account/Profile">Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Account/LogOut">Log Out</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

 
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - FiscalFriends - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)


</body>
<script>
    function checkBtn() {
        if (location.href.split("/").slice(-1) == '') {
            document.getElementById("extraLogIn").style.display = "none";
            document.getElementById("extraRegister").style.display = "none";
        }
    }
</script>
</html>